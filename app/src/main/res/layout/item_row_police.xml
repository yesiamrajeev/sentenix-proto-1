<!-- item_row.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button"
    android:orientation="vertical"

    android:padding="8dp"> <!-- Added padding between items -->

    <!-- Left part for details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingEnd="16dp"> <!-- Added paddingEnd -->

        <TextView
            android:id="@+id/item_details_police"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_text_police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingEnd="16dp"> <!-- Added paddingEnd -->



    </LinearLayout>

    <!-- Right part for delete button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:paddingBottom="10dp"
        android:paddingStart="16dp"> <!-- Added paddingStart -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accept_button_police"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_button3"
            android:layout_height="wrap_content"
            android:text="Accept" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingStart="16dp"> <!-- Added paddingStart -->


        <Switch
            android:id="@+id/inProgressSwitch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/material_dynamic_neutral_variant30"
            android:paddingRight="@dimen/_25sdp"
            android:text="In Progress"
            android:textSize="17dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/solvedSwitch"
            android:layout_width="168dp"
            android:textColor="@color/material_dynamic_neutral_variant30"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:text="Solved"
            android:textSize="17dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

</LinearLayout>
